  </configSections>
  <appSettings>
    <add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
  </appSettings>
  <system.web>
    <machineKey
      validationKey= 
      "5AD524EF7BEB32A479F8095F8BF7653680066ADE66B5C78F80C3DC1F90
      AA3D766F2B69304BFF88DEABEDE1E66D463C81FDEE0FC1A391AD90A6FD1294E7D243B1"
